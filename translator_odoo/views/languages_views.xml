<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="languages_tree" model="ir.ui.view">
            <field name="name">translator_odoo.languages.tree</field>
            <field name="model">language</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="code" />
                    <field name="uses" />
                </tree>
            </field>
        </record>

        <record id="languages_form" model="ir.ui.view">
            <field name="name">translator_odoo.languages.form</field>
            <field name="model">language</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="code" />
                                <field name="uses" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="languages_action_form" model="ir.actions.act_window">
            <field name="name">Languages Action</field>
            <field name="res_model">language</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a language.
                </p><p>
                    A language.
                </p>
            </field>
        </record>
        
        <menuitem
              id="menu_main_translator_action_form"
              groups="group_translator_odoo_manager"
              name="Translator"
              sequence="3"/>
        
        <menuitem
              action="translator_odoo.languages_action_form"
              id="menu_language_action_form"
              parent="translator_odoo.menu_main_translator_action_form"
              name="Lets check the languages"
              groups="group_translator_odoo_manager"
              sequence="3"/>
    </data>
</odoo>


