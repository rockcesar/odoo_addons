<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="translator_tree" model="ir.ui.view">
            <field name="name">translator_odoo.translator.tree</field>
            <field name="model">translator</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="text" />
                    <field name="term_translated" />
                    <field name="name_of_file" />
                    <field name="language" />
                    <field name="type_of_input" />
                </tree>
            </field>
        </record>

        <record id="translator_form" model="ir.ui.view">
            <field name="name">translator_odoo.translator.form</field>
            <field name="model">translator</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="text" />
                                <field name="term_translated" />
                                <field name="name_of_file" />
                                <field name="language" />
                                <field name="type_of_input" />
                            </group>
                            <group>
                                <button name="translate" string="Translate" type="object"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="translator_action_form" model="ir.actions.act_window">
            <field name="name">Translator Action</field>
            <field name="res_model">translator</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a translator.
                </p><p>
                    A translator.
                </p>
            </field>
        </record>
        
        <menuitem
              id="menu_main_translator_action_form"
              groups="group_translator_odoo_manager"
              name="Translator"
              sequence="3"/>
        
        <menuitem
              action="translator_odoo.translator_action_form"
              id="menu_translator_action_form"
              parent="translator_odoo.menu_main_translator_action_form"
              name="Lets translate it"
              groups="group_translator_odoo_manager"
              sequence="3"/>
    </data>
</odoo>


