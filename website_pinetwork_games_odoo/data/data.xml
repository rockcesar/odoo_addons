<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Groups  -->
        <record id="sudoku_app" model="admin.apps">
            <field name="name">Pidoku</field>
            <field name="app">auth_pidoku</field>
            <field name="admin_key">Your Server API Key</field>
            <field name="sandbox">False</field>
        </record>
        <record id="snake_app" model="admin.apps">
            <field name="name">Snake</field>
            <field name="app">auth_snake</field>
            <field name="admin_key">Your Server API Key</field>
            <field name="sandbox">False</field>
        </record>
        <record id="example_app" model="admin.apps">
            <field name="name">Example</field>
            <field name="app">auth_example</field>
            <field name="admin_key">Your Server API Key</field>
            <field name="sandbox">False</field>
        </record>
        <record id="platform_app" model="admin.apps">
            <field name="name">Platform</field>
            <field name="app">auth_platform</field>
            <field name="admin_key">Your Server API Key</field>
            <field name="sandbox">False</field>
        </record>
        
        <record forcecreate="True" id="check_pi_transactions_v1" model="ir.cron">
           <field name="name">Check Pi Transactions</field>
           <field eval="True" name="active" />
           <field name="user_id" ref="base.user_root" />
           <field name="interval_number">60</field>
           <field name="interval_type">minutes</field>
           <field name="numbercall">-1</field>
           <field ref="model_pi_transactions" name="model_id" />
            <field name="state">code</field>
           <field name="code">model.search([('action', '=', 'approve')]).check_transactions()</field>
           <field eval="False" name="doall"/>
        </record>
    </data>
</odoo>
